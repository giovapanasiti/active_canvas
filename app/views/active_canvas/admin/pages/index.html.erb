<div class="page-header">
  <h2>Pages</h2>
  <%= link_to "New Page", new_admin_page_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Slug</th>
        <th>Type</th>
        <th>Status</th>
        <th>Updated</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= link_to page.title, admin_page_path(page) %></td>
          <td><code><%= page.slug || "â€”" %></code></td>
          <td><%= page.page_type.name %></td>
          <td>
            <% if page.published? %>
              <span class="badge badge-success">Published</span>
            <% else %>
              <span class="badge badge-gray">Draft</span>
            <% end %>
          </td>
          <td><%= page.updated_at.strftime("%b %d, %Y") %></td>
          <td class="actions">
            <%= link_to "Content", content_admin_page_path(page), class: "btn btn-secondary" %>
            <%= link_to "Edit", edit_admin_page_path(page), class: "btn btn-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
