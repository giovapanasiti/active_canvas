<% content_for :page_title, @page.title %>

<!-- Page Header -->
<div class="page-header">
  <div class="page-header-left">
    <h2><%= @page.title %></h2>
    <p class="page-header-subtitle">
      <% if @page.slug.present? %>
        <code style="font-size: 0.8125rem;">/<%= @page.slug %></code>
      <% else %>
        No URL assigned
      <% end %>
    </p>
  </div>
  <div class="page-header-actions">
    <%= link_to editor_admin_page_path(@page), class: "btn btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="12 2 2 7 12 12 22 7 12 2"/>
        <polyline points="2 17 12 22 22 17"/>
        <polyline points="2 12 12 17 22 12"/>
      </svg>
      Open Designer
    <% end %>
    <%= link_to edit_admin_page_path(@page), class: "btn btn-secondary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 20h9"/>
        <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
      </svg>
      Edit Settings
    <% end %>
    <%= link_to versions_admin_page_path(@page), class: "btn btn-secondary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"/>
        <polyline points="12 6 12 12 16 14"/>
      </svg>
      History
      <% if @page.versions.any? %>
        <span class="badge badge-gray" style="margin-left: 0.25rem; padding: 0.125rem 0.375rem; font-size: 0.6875rem;"><%= @page.versions.count %></span>
      <% end %>
    <% end %>
    <% if @page.published? && @page.slug.present? %>
      <%= link_to public_page_path(@page.slug), target: "_blank", class: "btn btn-secondary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
          <polyline points="15 3 21 3 21 9"/>
          <line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
        View Live
      <% end %>
    <% end %>
  </div>
</div>

<!-- Page Details -->
<div class="card" style="margin-bottom: 1.5rem;">
  <div class="card-header">
    <span class="card-title">Page Details</span>
    <% if @page.published? %>
      <span class="badge badge-success">
        <span class="badge-dot"></span>
        Published
      </span>
    <% else %>
      <span class="badge badge-gray">
        <span class="badge-dot"></span>
        Draft
      </span>
    <% end %>
  </div>
  <div class="card-body">
    <div class="detail-grid">
      <div class="detail-item">
        <div class="detail-label">Page Type</div>
        <div class="detail-value"><%= @page.page_type.name %></div>
      </div>
      <div class="detail-item">
        <div class="detail-label">Created</div>
        <div class="detail-value"><%= @page.created_at.strftime("%B %d, %Y") %></div>
      </div>
      <div class="detail-item">
        <div class="detail-label">Last Modified</div>
        <div class="detail-value"><%= @page.updated_at.strftime("%B %d, %Y at %l:%M %p") %></div>
      </div>
      <div class="detail-item">
        <div class="detail-label">URL Slug</div>
        <div class="detail-value">
          <% if @page.slug.present? %>
            <code>/<%= @page.slug %></code>
          <% else %>
            <span style="color: var(--text-muted);">Not set</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- SEO & Social -->
<% has_seo = @page.meta_title.present? || @page.meta_description.present? || @page.og_title.present? || @page.og_image.present? %>
<div class="card" style="margin-bottom: 1.5rem;">
  <div class="card-header">
    <span class="card-title">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 0.5rem;">
        <circle cx="11" cy="11" r="8"/>
        <path d="m21 21-4.3-4.3"/>
      </svg>
      SEO & Social
    </span>
    <% if has_seo %>
      <span class="badge badge-success">
        <span class="badge-dot"></span>
        Configured
      </span>
    <% else %>
      <span class="badge badge-warning" style="background: #fef3c7; color: #92400e;">
        <span class="badge-dot" style="background: #f59e0b;"></span>
        Not configured
      </span>
    <% end %>
  </div>
  <div class="card-body">
    <% if has_seo %>
      <!-- SEO Section -->
      <% if @page.meta_title.present? || @page.meta_description.present? %>
        <div style="margin-bottom: 1.5rem;">
          <h4 style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); margin-bottom: 0.75rem;">
            Search Engine
          </h4>
          <div class="detail-grid">
            <% if @page.meta_title.present? %>
              <div class="detail-item">
                <div class="detail-label">Meta Title</div>
                <div class="detail-value"><%= @page.meta_title %></div>
              </div>
            <% end %>
            <% if @page.meta_robots.present? %>
              <div class="detail-item">
                <div class="detail-label">Robots</div>
                <div class="detail-value"><code><%= @page.meta_robots %></code></div>
              </div>
            <% end %>
          </div>
          <% if @page.meta_description.present? %>
            <div class="detail-item" style="margin-top: 0.75rem;">
              <div class="detail-label">Meta Description</div>
              <div class="detail-value" style="color: var(--text-muted);"><%= @page.meta_description %></div>
            </div>
          <% end %>
          <% if @page.canonical_url.present? %>
            <div class="detail-item" style="margin-top: 0.75rem;">
              <div class="detail-label">Canonical URL</div>
              <div class="detail-value"><code><%= @page.canonical_url %></code></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Open Graph Section -->
      <% if @page.og_title.present? || @page.og_description.present? || @page.og_image.present? %>
        <div style="margin-bottom: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--border);">
          <h4 style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); margin-bottom: 0.75rem;">
            Social Sharing (Open Graph)
          </h4>
          <div class="detail-grid">
            <% if @page.og_title.present? %>
              <div class="detail-item">
                <div class="detail-label">Social Title</div>
                <div class="detail-value"><%= @page.og_title %></div>
              </div>
            <% end %>
            <% if @page.og_image.present? %>
              <div class="detail-item">
                <div class="detail-label">Social Image</div>
                <div class="detail-value">
                  <a href="<%= @page.og_image %>" target="_blank" style="color: var(--primary); word-break: break-all;"><%= truncate(@page.og_image, length: 50) %></a>
                </div>
              </div>
            <% end %>
          </div>
          <% if @page.og_description.present? %>
            <div class="detail-item" style="margin-top: 0.75rem;">
              <div class="detail-label">Social Description</div>
              <div class="detail-value" style="color: var(--text-muted);"><%= @page.og_description %></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Twitter Section -->
      <% if @page.twitter_card.present? || @page.twitter_title.present? || @page.twitter_image.present? %>
        <div style="margin-bottom: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--border);">
          <h4 style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); margin-bottom: 0.75rem;">
            Twitter Card
          </h4>
          <div class="detail-grid">
            <% if @page.twitter_card.present? %>
              <div class="detail-item">
                <div class="detail-label">Card Type</div>
                <div class="detail-value"><code><%= @page.twitter_card %></code></div>
              </div>
            <% end %>
            <% if @page.twitter_title.present? %>
              <div class="detail-item">
                <div class="detail-label">Twitter Title</div>
                <div class="detail-value"><%= @page.twitter_title %></div>
              </div>
            <% end %>
            <% if @page.twitter_image.present? %>
              <div class="detail-item">
                <div class="detail-label">Twitter Image</div>
                <div class="detail-value">
                  <a href="<%= @page.twitter_image %>" target="_blank" style="color: var(--primary); word-break: break-all;"><%= truncate(@page.twitter_image, length: 50) %></a>
                </div>
              </div>
            <% end %>
          </div>
          <% if @page.twitter_description.present? %>
            <div class="detail-item" style="margin-top: 0.75rem;">
              <div class="detail-label">Twitter Description</div>
              <div class="detail-value" style="color: var(--text-muted);"><%= @page.twitter_description %></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Structured Data -->
      <% if @page.structured_data.present? %>
        <div style="padding-top: 1rem; border-top: 1px solid var(--border);">
          <h4 style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); margin-bottom: 0.75rem;">
            Structured Data (JSON-LD)
          </h4>
          <div class="content-preview" style="max-height: 150px;"><%= @page.structured_data %></div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state" style="padding: 1.5rem;">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="margin-bottom: 0.75rem; opacity: 0.5;">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.3-4.3"/>
        </svg>
        <h3 style="font-size: 0.9375rem;">No SEO data configured</h3>
        <p style="margin-bottom: 1rem;">Add meta titles, descriptions, and social images to improve search rankings and social sharing.</p>
        <%= link_to edit_admin_page_path(@page), class: "btn btn-secondary btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 20h9"/>
            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
          </svg>
          Configure SEO
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Content Preview -->
<div class="card" style="margin-bottom: 1.5rem;">
  <div class="card-header">
    <span class="card-title">Content Preview</span>
  </div>
  <div style="padding: 1rem;">
    <% if @page.content.present? %>
      <div class="content-preview"><%= truncate(@page.content, length: 2000) %></div>
    <% else %>
      <div class="empty-state" style="padding: 2rem;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
          <polyline points="14 2 14 8 20 8"/>
        </svg>
        <h3>No content yet</h3>
        <p>Open the visual designer to start building this page</p>
        <%= link_to editor_admin_page_path(@page), class: "btn btn-primary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 2 7 12 12 22 7 12 2"/>
            <polyline points="2 17 12 22 22 17"/>
            <polyline points="2 12 12 17 22 12"/>
          </svg>
          Open Designer
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Compiled Tailwind CSS -->
<% if ActiveCanvas::Setting.css_framework == "tailwind" %>
<div class="card" style="margin-bottom: 1.5rem;">
  <div class="card-header">
    <span class="card-title">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 0.5rem;">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
      </svg>
      Compiled Tailwind CSS
    </span>
    <% if @page.compiled_tailwind_css.present? %>
      <span class="badge badge-success">
        <span class="badge-dot"></span>
        <%= number_to_human_size(@page.compiled_tailwind_css.bytesize) %>
      </span>
    <% else %>
      <span class="badge badge-gray">
        <span class="badge-dot"></span>
        Not compiled
      </span>
    <% end %>
  </div>
  <div class="card-body">
    <% if @page.compiled_tailwind_css.present? %>
      <div class="detail-grid">
        <div class="detail-item">
          <div class="detail-label">Compiled At</div>
          <div class="detail-value"><%= @page.tailwind_compiled_at&.strftime("%B %d, %Y at %l:%M %p") || "Unknown" %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label">CSS Size</div>
          <div class="detail-value"><%= number_to_human_size(@page.compiled_tailwind_css.bytesize) %></div>
        </div>
      </div>
      <div style="margin-top: 1rem;">
        <button type="button" class="btn btn-secondary btn-sm" onclick="openTailwindModal()">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
            <circle cx="12" cy="12" r="3"/>
          </svg>
          View Compiled CSS
        </button>
      </div>
    <% else %>
      <div class="empty-state" style="padding: 1.5rem;">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="margin-bottom: 0.75rem; opacity: 0.5;">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <h3 style="font-size: 0.9375rem;">No compiled CSS yet</h3>
        <p style="margin-bottom: 1rem;">
          <% if ActiveCanvas::TailwindCompiler.available? %>
            Save the page in the Designer to compile Tailwind CSS.
          <% else %>
            The <code>tailwindcss-ruby</code> gem is not installed. Add it to your Gemfile to enable compilation.
          <% end %>
        </p>
        <%= link_to editor_admin_page_path(@page), class: "btn btn-secondary btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 2 7 12 12 22 7 12 2"/>
            <polyline points="2 17 12 22 22 17"/>
            <polyline points="2 12 12 17 22 12"/>
          </svg>
          Open Designer
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Tailwind CSS Modal -->
<% if @page.compiled_tailwind_css.present? %>
<style>
  .tailwind-modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(15, 23, 42, 0.75);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    backdrop-filter: blur(4px);
  }
  .tailwind-modal-overlay.active {
    display: flex;
  }
  .tailwind-modal {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    width: 100%;
    max-width: 900px;
    max-height: calc(100vh - 2rem);
    display: flex;
    flex-direction: column;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    border: 1px solid var(--border);
    animation: modalSlideIn 0.2s ease-out;
  }
  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-10px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  .tailwind-modal-header {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: var(--bg-main);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  }
  .tailwind-modal-header h3 {
    margin: 0;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .tailwind-modal-header h3 svg {
    color: #06b6d4;
  }
  .tailwind-modal-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.375rem;
    color: var(--text-muted);
    border-radius: var(--radius);
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .tailwind-modal-close:hover {
    background: var(--border);
    color: var(--text);
  }
  .tailwind-modal-body {
    padding: 1rem 1.25rem;
    overflow: auto;
    flex: 1;
    min-height: 0;
  }
  .tailwind-modal-code {
    background: #0f172a;
    color: #e2e8f0;
    padding: 1rem;
    border-radius: var(--radius);
    font-family: 'SF Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;
    font-size: 0.75rem;
    line-height: 1.6;
    overflow: auto;
    max-height: 55vh;
    margin: 0;
    white-space: pre-wrap;
    word-break: break-all;
    border: 1px solid #1e293b;
  }
  .tailwind-modal-code code {
    font-family: inherit;
  }
  .tailwind-modal-footer {
    padding: 0.875rem 1.25rem;
    border-top: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: var(--bg-main);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    gap: 0.75rem;
  }
  .tailwind-modal-info {
    font-size: 0.75rem;
    color: var(--text-muted);
  }
  .tailwind-modal-actions {
    display: flex;
    gap: 0.5rem;
  }
  .tailwind-modal-actions .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }
</style>
<div id="tailwind-css-modal" class="tailwind-modal-overlay" onclick="if(event.target === this) this.classList.remove('active')">
  <div class="tailwind-modal">
    <div class="tailwind-modal-header">
      <h3>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12.001 4.8c-3.2 0-5.2 1.6-6 4.8 1.2-1.6 2.6-2.2 4.2-1.8.913.228 1.565.89 2.288 1.624C13.666 10.618 15.027 12 18.001 12c3.2 0 5.2-1.6 6-4.8-1.2 1.6-2.6 2.2-4.2 1.8-.913-.228-1.565-.89-2.288-1.624C16.337 6.182 14.976 4.8 12.001 4.8zm-6 7.2c-3.2 0-5.2 1.6-6 4.8 1.2-1.6 2.6-2.2 4.2-1.8.913.228 1.565.89 2.288 1.624 1.177 1.194 2.538 2.576 5.512 2.576 3.2 0 5.2-1.6 6-4.8-1.2 1.6-2.6 2.2-4.2 1.8-.913-.228-1.565-.89-2.288-1.624C10.337 13.382 8.976 12 6.001 12z"/>
        </svg>
        Compiled Tailwind CSS
      </h3>
      <button type="button" class="tailwind-modal-close" onclick="document.getElementById('tailwind-css-modal').classList.remove('active')">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    <div class="tailwind-modal-body">
      <pre class="tailwind-modal-code"><code id="tailwind-css-content"><%= @page.compiled_tailwind_css %></code></pre>
    </div>
    <div class="tailwind-modal-footer">
      <span class="tailwind-modal-info">
        <%= number_to_human_size(@page.compiled_tailwind_css.bytesize) %> &middot;
        Compiled <%= time_ago_in_words(@page.tailwind_compiled_at) %> ago
      </span>
      <div class="tailwind-modal-actions">
        <button type="button" class="btn btn-secondary btn-sm" id="copy-css-btn" onclick="copyTailwindCss()">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
          </svg>
          <span>Copy</span>
        </button>
        <button type="button" class="btn btn-primary btn-sm" onclick="document.getElementById('tailwind-css-modal').classList.remove('active')">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
<script>
  function openTailwindModal() {
    document.getElementById('tailwind-css-modal').classList.add('active');
  }
  function copyTailwindCss() {
    const content = document.getElementById('tailwind-css-content').textContent;
    navigator.clipboard.writeText(content).then(() => {
      const btn = document.getElementById('copy-css-btn');
      const originalHtml = btn.innerHTML;
      btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg><span>Copied!</span>';
      btn.classList.remove('btn-secondary');
      btn.classList.add('btn-success');
      setTimeout(() => {
        btn.innerHTML = originalHtml;
        btn.classList.remove('btn-success');
        btn.classList.add('btn-secondary');
      }, 2000);
    });
  }
  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      document.getElementById('tailwind-css-modal').classList.remove('active');
    }
  });
</script>
<% end %>
