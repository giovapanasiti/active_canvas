<!DOCTYPE html>
<html>
  <head>
    <title>Edit: <%= @page.title %> - ActiveCanvas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="csrf-token" content="<%= form_authenticity_token %>">

    <!-- Font Awesome for toolbar icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- GrapeJS Core - load first before any AMD loaders -->
    <link rel="stylesheet" href="https://unpkg.com/grapesjs@0.21.13/dist/css/grapes.min.css">
    <script src="https://unpkg.com/grapesjs@0.21.13/dist/grapes.min.js"></script>

    <!-- GrapeJS Plugins -->
    <script src="https://unpkg.com/grapesjs-blocks-basic@1.0.2/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-plugin-forms@2.0.6/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-preset-webpage@1.0.3/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-style-bg@2.0.2/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-tabs@1.0.6/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-custom-code@1.0.2/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-touch@0.1.1/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-parser-postcss@1.0.3/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-tooltip@0.1.8/dist/index.min.js"></script>
    <script src="https://unpkg.com/grapesjs-typed@2.0.1/dist/index.min.js"></script>

    <!-- Monaco Editor - load after GrapeJS to avoid AMD conflicts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs/loader.min.js"></script>
    <script>
      require.config({ paths: { vs: 'https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs' } });
      window.MonacoEnvironment = {
        getWorkerUrl: function() {
          return URL.createObjectURL(new Blob([`
            self.MonacoEnvironment = {
              baseUrl: 'https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min'
            };
            importScripts('https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs/base/worker/workerMain.js');
          `], { type: 'text/javascript' }));
        }
      };
    </script>

    <!-- Inter font to match admin UI -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
      /* Base theme variables */
      :root {
        /* Radii - matching admin UI */
        --editor-radius: 0.5rem;
        --editor-radius-lg: 0.75rem;

        /* Status colors - consistent across themes */
        --editor-success: #10b981;
        --editor-success-light: #d1fae5;
        --editor-danger: #ef4444;
        --editor-danger-light: #fee2e2;
        --editor-warning: #f59e0b;
        --editor-warning-light: #fef3c7;
      }

      /* Theme: Dark (default) - Slate based */
      [data-theme="dark"], :root {
        --editor-primary: #6366f1;
        --editor-primary-hover: #4f46e5;
        --editor-primary-light: rgba(99, 102, 241, 0.15);
        --editor-bg: #0f172a;
        --editor-surface: #1e293b;
        --editor-surface-hover: #334155;
        --editor-border: #334155;
        --editor-border-light: #475569;
        --editor-text: #f8fafc;
        --editor-text-muted: #94a3b8;
        --editor-text-dim: #64748b;
        --editor-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.3);
        --editor-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.4), 0 1px 2px -1px rgb(0 0 0 / 0.4);
        --editor-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.4), 0 2px 4px -2px rgb(0 0 0 / 0.4);
        --editor-canvas-bg: #0f172a;
      }

      /* Theme: Midnight - Deep purple/blue */
      [data-theme="midnight"] {
        --editor-primary: #8b5cf6;
        --editor-primary-hover: #7c3aed;
        --editor-primary-light: rgba(139, 92, 246, 0.15);
        --editor-bg: #0c0a1d;
        --editor-surface: #1a1730;
        --editor-surface-hover: #2d2750;
        --editor-border: #2d2750;
        --editor-border-light: #3d3570;
        --editor-text: #f5f3ff;
        --editor-text-muted: #a5a0d0;
        --editor-text-dim: #7c75a8;
        --editor-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.4);
        --editor-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.5), 0 1px 2px -1px rgb(0 0 0 / 0.5);
        --editor-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.5), 0 2px 4px -2px rgb(0 0 0 / 0.5);
        --editor-canvas-bg: #0c0a1d;
      }

      /* Theme: Ocean - Teal/cyan */
      [data-theme="ocean"] {
        --editor-primary: #06b6d4;
        --editor-primary-hover: #0891b2;
        --editor-primary-light: rgba(6, 182, 212, 0.15);
        --editor-bg: #0a1a1f;
        --editor-surface: #0f2930;
        --editor-surface-hover: #1a3d47;
        --editor-border: #1a3d47;
        --editor-border-light: #2a5560;
        --editor-text: #ecfeff;
        --editor-text-muted: #99d5df;
        --editor-text-dim: #5eaab8;
        --editor-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.4);
        --editor-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.5), 0 1px 2px -1px rgb(0 0 0 / 0.5);
        --editor-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.5), 0 2px 4px -2px rgb(0 0 0 / 0.5);
        --editor-canvas-bg: #0a1a1f;
      }

      /* Theme: Light - Clean and bright */
      [data-theme="light"] {
        --editor-primary: #6366f1;
        --editor-primary-hover: #4f46e5;
        --editor-primary-light: #e0e7ff;
        --editor-bg: #f1f5f9;
        --editor-surface: #ffffff;
        --editor-surface-hover: #f8fafc;
        --editor-border: #e2e8f0;
        --editor-border-light: #cbd5e1;
        --editor-text: #1e293b;
        --editor-text-muted: #64748b;
        --editor-text-dim: #94a3b8;
        --editor-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --editor-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        --editor-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --editor-canvas-bg: #e2e8f0;
      }

      /* Theme: Charcoal - Neutral dark */
      [data-theme="charcoal"] {
        --editor-primary: #f97316;
        --editor-primary-hover: #ea580c;
        --editor-primary-light: rgba(249, 115, 22, 0.15);
        --editor-bg: #171717;
        --editor-surface: #262626;
        --editor-surface-hover: #363636;
        --editor-border: #363636;
        --editor-border-light: #525252;
        --editor-text: #fafafa;
        --editor-text-muted: #a3a3a3;
        --editor-text-dim: #737373;
        --editor-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.4);
        --editor-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.5), 0 1px 2px -1px rgb(0 0 0 / 0.5);
        --editor-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.5), 0 2px 4px -2px rgb(0 0 0 / 0.5);
        --editor-canvas-bg: #171717;
      }

      * { box-sizing: border-box; margin: 0; padding: 0; }

      html, body {
        height: 100%;
        overflow: hidden;
      }

      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background: var(--editor-bg);
        color: var(--editor-text);
      }

      /* Editor Header */
      .editor-header {
        height: 52px;
        background: var(--editor-surface);
        border-bottom: 1px solid var(--editor-border);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 1rem;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 100;
      }

      .editor-header-left {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      .editor-back {
        color: var(--editor-text-muted);
        text-decoration: none;
        font-size: 0.8125rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        border-radius: var(--editor-radius);
        transition: all 0.15s ease;
      }

      .editor-back:hover {
        color: var(--editor-text);
        background: var(--editor-surface-hover);
      }

      .editor-title {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--editor-text);
        padding-left: 0.75rem;
        letter-spacing: -0.01em;
      }

      .editor-header-center {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        background: var(--editor-bg);
        padding: 0.25rem;
        border-radius: var(--editor-radius);
      }

      .editor-header-right {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      /* Device Buttons */
      .device-btn {
        background: transparent;
        border: none;
        color: var(--editor-text-muted);
        padding: 0.5rem 0.625rem;
        border-radius: 0.375rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.15s ease;
      }

      .device-btn:hover {
        color: var(--editor-text);
      }

      .device-btn.active {
        background: var(--editor-surface);
        color: var(--editor-primary);
      }

      .device-btn svg {
        width: 18px;
        height: 18px;
      }

      /* Header Buttons */
      .header-btn {
        padding: 0.5rem 0.875rem;
        border-radius: var(--editor-radius);
        font-size: 0.8125rem;
        font-weight: 500;
        cursor: pointer;
        border: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.15s ease;
      }

      .header-btn svg {
        width: 16px;
        height: 16px;
      }

      .header-btn-secondary {
        background: var(--editor-bg);
        color: var(--editor-text-muted);
        border: 1px solid var(--editor-border);
      }

      .header-btn-secondary:hover {
        background: var(--editor-surface-hover);
        color: var(--editor-text);
        border-color: var(--editor-border-light);
      }

      .header-btn-primary {
        background: var(--editor-primary);
        color: white;
        box-shadow: var(--editor-shadow-sm);
      }

      .header-btn-primary:hover {
        background: var(--editor-primary-hover);
        box-shadow: var(--editor-shadow);
      }

      .header-btn-primary:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      /* Main Editor Container */
      .editor-container {
        display: flex;
        flex: 1;
        width: 100%;
        overflow: hidden;
      }

      /* Left Panel - Blocks */
      .editor-panel-left {
        width: 260px;
        min-width: 260px;
        background: var(--editor-surface);
        border-right: 1px solid var(--editor-border);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        flex-shrink: 0;
      }

      .panel-tabs {
        display: flex;
        background: var(--editor-bg);
        padding: 0.5rem 0.5rem 0;
        gap: 0.25rem;
      }

      .panel-tab {
        flex: 1;
        padding: 0.625rem 0.75rem;
        background: transparent;
        border: none;
        color: var(--editor-text-muted);
        font-size: 0.75rem;
        font-weight: 500;
        cursor: pointer;
        border-radius: var(--editor-radius) var(--editor-radius) 0 0;
        transition: all 0.15s ease;
      }

      .panel-tab:hover {
        color: var(--editor-text);
        background: var(--editor-surface-hover);
      }

      .panel-tab.active {
        color: var(--editor-text);
        background: var(--editor-surface);
      }

      .panel-content {
        flex: 1;
        overflow-y: auto;
        padding: 0.75rem;
      }

      /* Canvas */
      .editor-canvas {
        flex: 1;
        min-width: 0;
        background: var(--editor-bg);
        position: relative;
        overflow: hidden;
      }

      #gjs {
        height: 100%;
        width: 100%;
      }

      /* GrapeJS Canvas - responsive device preview */
      .gjs-cv-canvas {
        width: 100% !important;
        height: 100% !important;
        display: flex;
        justify-content: center;
        background: var(--editor-bg);
      }

      .gjs-frame-wrapper {
        transition: width 0.3s ease;
        background: #fff;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
      }

      /* Device-specific frame styling */
      .gjs-frame-wrapper[style*="width: 768px"],
      .gjs-frame-wrapper[style*="width: 320px"] {
        margin: 1rem auto;
        border-radius: 8px;
        overflow: hidden;
      }

      /* Right Panel - Styles/Layers */
      .editor-panel-right {
        width: 300px;
        min-width: 300px;
        background: var(--editor-surface);
        border-left: 1px solid var(--editor-border);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        flex-shrink: 0;
      }

      /* GrapeJS Overrides */
      .gjs-one-bg {
        background-color: var(--editor-surface);
      }

      .gjs-two-color {
        color: var(--editor-text);
      }

      .gjs-three-bg {
        background-color: var(--editor-bg);
      }

      .gjs-four-color,
      .gjs-four-color-h:hover {
        color: var(--editor-primary);
      }

      /* Blocks */
      .gjs-block {
        width: calc(50% - 6px);
        min-height: 65px;
        padding: 0.625rem;
        margin: 3px;
        border-radius: var(--editor-radius);
        font-size: 0.6875rem;
        background: var(--editor-bg);
        border: 1px solid var(--editor-border);
        transition: all 0.15s ease;
      }

      .gjs-block:hover {
        border-color: var(--editor-primary);
        box-shadow: 0 0 0 1px var(--editor-primary);
      }

      .gjs-block-label {
        font-size: 0.6875rem;
        font-weight: 500;
      }

      .gjs-block-category .gjs-title {
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 0.875rem 0.75rem;
        color: var(--editor-text-muted);
        border-bottom: 1px solid var(--editor-border);
      }

      /* Layers */
      .gjs-layers {
        padding: 0.5rem;
      }

      .gjs-layer {
        font-size: 0.75rem;
        border-radius: 0.25rem;
      }

      .gjs-layer:hover {
        background: var(--editor-surface-hover);
      }

      /* Style Manager */
      .gjs-sm-sector {
        border-bottom: 1px solid var(--editor-border);
      }

      .gjs-sm-sector-title {
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 0.875rem 0.75rem;
        color: var(--editor-text-muted);
      }

      .gjs-sm-properties {
        padding: 0.75rem;
      }

      .gjs-sm-label {
        font-size: 0.6875rem;
        color: var(--editor-text-muted);
      }

      .gjs-field {
        background: var(--editor-bg);
        border: 1px solid var(--editor-border);
        border-radius: 0.375rem;
      }

      .gjs-field:focus-within {
        border-color: var(--editor-primary);
        box-shadow: 0 0 0 2px var(--editor-primary-light);
      }

      .gjs-field input,
      .gjs-field select {
        font-size: 0.75rem;
        color: var(--editor-text);
        font-family: inherit;
      }

      /* Traits (Component Settings) */
      .gjs-trt-traits {
        padding: 0.75rem;
      }

      .gjs-trt-trait {
        margin-bottom: 0.75rem;
      }

      .gjs-trt-trait .gjs-label {
        font-size: 0.6875rem;
        font-weight: 500;
        margin-bottom: 0.375rem;
        color: var(--editor-text-muted);
      }

      /* Selected Component */
      .gjs-selected {
        outline: 2px solid var(--editor-primary) !important;
        outline-offset: -2px;
      }

      .gjs-toolbar {
        background: var(--editor-primary);
        border-radius: 0.375rem;
        padding: 0.25rem;
      }

      .gjs-toolbar-item {
        padding: 0.375rem 0.5rem;
        font-size: 0.75rem;
        border-radius: 0.25rem;
      }

      .gjs-toolbar-item:hover {
        background: rgba(255, 255, 255, 0.2);
      }

      /* Rich Text Editor */
      .gjs-rte-toolbar {
        background: var(--editor-surface);
        border: 1px solid var(--editor-border);
        border-radius: var(--editor-radius);
        box-shadow: var(--editor-shadow-md);
      }

      .gjs-rte-action {
        color: var(--editor-text);
        font-size: 0.875rem;
        padding: 0.5rem;
        border-radius: 0.25rem;
      }

      .gjs-rte-action:hover {
        background: var(--editor-surface-hover);
      }

      /* Canvas Frame */
      .gjs-frame-wrapper {
        background: #fff;
      }

      /* Modal */
      .gjs-mdl-dialog {
        background: var(--editor-surface);
        border-radius: var(--editor-radius-lg);
        border: 1px solid var(--editor-border);
        max-width: 90vw;
        width: 1000px;
        box-shadow: var(--editor-shadow-md);
      }

      .gjs-mdl-header {
        border-bottom: 1px solid var(--editor-border);
        padding: 1rem 1.25rem;
      }

      .gjs-mdl-title {
        font-size: 1rem;
        font-weight: 600;
      }

      /* Asset Manager */
      .gjs-am-assets-cont {
        padding: 1rem;
      }

      .gjs-am-asset {
        border-radius: var(--editor-radius);
        margin: 0.25rem;
        border: 1px solid var(--editor-border);
        overflow: hidden;
      }

      .gjs-am-asset:hover {
        border-color: var(--editor-primary);
      }

      .gjs-am-asset-image {
        border-radius: 0;
      }

      .gjs-am-meta {
        padding: 0.5rem;
        font-size: 0.6875rem;
        background: var(--editor-bg);
      }

      /* Code Editor Modal - styles defined in editor view for Monaco */
      .gjs-mdl-content {
        padding: 0;
      }

      /* Notification Toast */
      .editor-toast {
        position: fixed;
        bottom: 1.5rem;
        right: 1.5rem;
        padding: 0.875rem 1.25rem;
        border-radius: var(--editor-radius);
        font-size: 0.8125rem;
        font-weight: 500;
        z-index: 1000;
        display: none;
        box-shadow: var(--editor-shadow-md);
        animation: slideIn 0.3s ease;
      }

      .editor-toast.show {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .editor-toast.success {
        background: var(--editor-success);
        color: white;
      }

      .editor-toast.error {
        background: var(--editor-danger);
        color: white;
      }

      @keyframes slideIn {
        from {
          transform: translateY(100%);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      /* Loading Overlay */
      .editor-loading {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(4px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
      }

      .editor-loading.hidden {
        display: none;
      }

      .editor-loading-spinner {
        width: 44px;
        height: 44px;
        border: 3px solid var(--editor-border);
        border-top-color: var(--editor-primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        to { transform: rotate(360deg); }
      }

      /* Scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
      }

      ::-webkit-scrollbar-track {
        background: var(--editor-bg);
      }

      ::-webkit-scrollbar-thumb {
        background: var(--editor-border-light);
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: var(--editor-text-dim);
      }

      /* Selection color */
      ::selection {
        background: var(--editor-primary);
        color: white;
      }

      /* ==================== Theme Switcher ==================== */

      .theme-switcher {
        position: relative;
      }

      .theme-dropdown {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background: var(--editor-surface);
        border: 1px solid var(--editor-border);
        border-radius: var(--editor-radius-lg);
        box-shadow: var(--editor-shadow-md);
        min-width: 180px;
        z-index: 200;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-8px);
        transition: all 0.15s ease;
      }

      .theme-dropdown.open {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }

      .theme-dropdown-header {
        padding: 0.75rem 1rem;
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--editor-text-muted);
        border-bottom: 1px solid var(--editor-border);
      }

      .theme-option {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        width: 100%;
        padding: 0.625rem 1rem;
        background: transparent;
        border: none;
        color: var(--editor-text);
        font-size: 0.8125rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.15s ease;
        text-align: left;
      }

      .theme-option:hover {
        background: var(--editor-surface-hover);
      }

      .theme-option:last-child {
        border-radius: 0 0 var(--editor-radius-lg) var(--editor-radius-lg);
      }

      .theme-preview {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 2px solid var(--editor-border);
        flex-shrink: 0;
      }

      .theme-preview-dark {
        background: linear-gradient(135deg, #0f172a 50%, #1e293b 50%);
      }

      .theme-preview-midnight {
